                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleX="0.80"
                            android:scaleY="0.80"
                            android:text="Poor" />

                        <RadioButton
                            android:id="@+id/rb_3_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleX="0.80"
                            android:scaleY="0.80"
                            android:text="Very Poor" />
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <LinearLayout
