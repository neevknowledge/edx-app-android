                            android:layout_height="wrap_content"
                            android:scaleX="0.80"
                            android:scaleY="0.80"
                            android:text="Excellent" />

                        <RadioButton
                            android:id="@+id/rb_5_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleX="0.80"
                            android:scaleY="0.80"
                            android:text="Good" />

                        <RadioButton
